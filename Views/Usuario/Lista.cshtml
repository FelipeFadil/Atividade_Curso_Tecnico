@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Lista";
}

<h2>Listagem de Usuários</h2>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Data de Nascimento</th>
            <th>Operações</th>
        </tr>
    </thead>
        @foreach (Usuario u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Nome</td>
                <td>@u.Login</td>
                <td>@u.Senha</td>
                <td>@u.DataNascimento.ToShortDateString()</td>
                <td>
                    <a href="/Usuario/Remover?Id=@u.Id" onclick="return confirm('Deseja excluir?');">Remover</a>
                    <a href="/Usuario/Editar?Id=@u.Id">Alterar</a>
                </td>
            </tr>
        }
</table>
<p>
    @ViewBag.Mensagem
</p>